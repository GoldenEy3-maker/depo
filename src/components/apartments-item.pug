mixin apartments-item(opts)
  article(class="relative border-b border-r border-muted px-2")&attributes(attributes)
    a(href="apartments-detail.html", class="absolute inset-0 z-10")
    div(class="relative ~h-[18.25rem]/[21.25rem]")
      button(
        class="button button--ghost button--icon-md absolute z-10 rounded-full text-muted ~top-6/7 ~right-8/10 ~h-9/11 ~w-9/11 hover:bg-muted-foreground/50"
      )
        span(class="~h-4/6 ~w-[0.875rem]/[1.125rem]")
          svg(
            width="100%",
            height="100%",
            viewBox="0 0 18 24",
            fill="none",
            xmlns="http://www.w3.org/2000/svg"
          )
            path(
              d="M8.88677 18.9875L1 22.466V3C1 1.89543 1.89543 1 3 1H15C16.1046 1 17 1.89543 17 3V22.4244L9.71602 18.9976L9.3037 18.8036L8.88677 18.9875Z",
              fill="none",
              stroke="currentColor",
              stroke-width="2"
            )
      img(class="mx-auto h-full px-7 py-5", src="", alt="", data-lazy-img=opts.img)
    div(class="px-5 pb-6 ~mt-0/4")
      div(
        class="flex items-center justify-between gap-x-4 gap-y-2 text-basicS text-muted"
      )
        span!= opts.type
        span!= opts.area
      h4(class="mt-2 text-h4 text-brand")!= opts.price
