extends ../layouts/root

include ../../components/breadcrumbs
include ../../components/range-slider
include ../../components/radio-tabs
include ../../components/apartments-item

block content
  main(class="col-span-full grid grid-cols-subgrid")
    +breadcrumbs([{href: "/", label: "Главная"}, {href: 'project-detail.html', label: "Дом на Кленова"}], "Квартиры")(
      class="col-[main] ~mt-6/12"
    )
    h1(class="col-[main] text-h1 text-brand ~mt-8/20") Пора выбрать квартиру
    div(class="@container col-[main] ~mt-8/20")
      form(action="/", class="", method="get", class="flex flex-wrap items-end gap-x-14 gap-y-6")
        +range-slider({label: "Площадь помещения, м²", id: "area-range", step: 1, min: 23, max: 123, fields: [{placeholder: "от 23", name: "area-min"}, {placeholder: "от 123", name: "area-max"}]})(
          class="basis-60"
        )
        +range-slider({label: "Стоимость, млн. руб.", id: "price-range", step: 0.1, min: 2.3, max: 12.3, fields: [{placeholder: "от 2,3", name: "price-min"}, {placeholder: "от 12,3", name: "price-max"}]})(
          class="basis-60"
        )
        div(class="basis-full md:basis-1/2 xl:basis-80")
          +radio-tabs({label: "Количество комнат", options: [{label: "C", value: "C", id: "amout-of-rooms-c", name: "amout-of-rooms"}, {label: "1K", value: "1K", id: "amout-of-rooms-1K", name: "amout-of-rooms"}, {label: "2K", value: "2K", id: "amout-of-rooms-2K", name: "amout-of-rooms"}, {label: "3K", value: "3K", id: "amout-of-rooms-3K", name: "amout-of-rooms"}]})(
            class="max-w-80"
          )
        div(class="md:ml-auto")
          button(type="submit", class="button h-14") 43 квартиры
      hr(class="bg-muted-background ~mt-10/14")
      div(class="flex flex-wrap items-center justify-between gap-x-6 gap-y-2 ~mt-6/10")
        select(name="sort", data-custom-select="")
          option(value="poor", selected="") Сначала недорогие
          option(value="rich") Сначала дорогие
          option(value="big") Сначала большие
          option(value="small") Сначала маленькие
        button(
          type="button",
          class="button button--ghost h-12 gap-x-3 p-0 text-secondary"
        )
          span(class="~h-4/6 ~w-[0.875rem]/[1.125rem]")
            svg(
              width="100%",
              height="100%",
              viewBox="0 0 18 24",
              fill="none",
              xmlns="http://www.w3.org/2000/svg"
            )
              path(
                d="M0 24V2.66667C0 1.93333 0.252 1.30578 0.756 0.784C1.26 0.262222 1.86514 0.000888889 2.57143 0H15.4286C16.1357 0 16.7413 0.261333 17.2453 0.784C17.7493 1.30667 18.0009 1.93422 18 2.66667V24L9 20L0 24ZM2.57143 19.9333L9 17.0667L15.4286 19.9333V2.66667H2.57143V19.9333Z",
                fill="currentColor"
              )
          span Избранное
      div(
        class="sm:@[82.5rem]:grid-cols-[repeat(auto-fill,minmax(27.5rem,1fr))] grid grid-cols-1 border-l border-t border-muted ~mt-4/7 sm:grid-cols-[repeat(auto-fill,minmax(22.5rem,1fr))]"
